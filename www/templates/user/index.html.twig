{% extends 'base.html.twig' %}

{% block title %}Tableau des Utilisateurs{% endblock %}

{% block body %}
    <h1>Tableau des Utilisateurs</h1>

    <div class="game-list-container">
        <a href="{{ path('app_user_new') }}" class="add-game-btn">Ajouter un utilisateur</a>

    <table class="game-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.username }}</td>
                <td>
                <div class="game-actions">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"class="view-link">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"class="edit-link">Editer</a>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="add-game-btn">Ajouter un utilisateur</a>
</div>
{% endblock %}
